{
  "name": "link-board",
  "version": "1.0.3",
  "publisher": "cromon",
  "displayName": "Link Board",
  "description": "A customizable dashboard for your project links, right inside VS Code.",
  "repository": {
    "type": "git",
    "url": "https://github.com/cromon-code/link-board.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "link-board.show",
        "title": "Link Board: Show"
      },
      {
        "command": "link-board.edit",
        "title": "Link Board: Edit Links"
      }
    ],
    "configuration": {
      "title": "Link Board",
      "properties": {
        "link-board.links": {
          "type": "array",
          "scope": "resource",
          "description": "An array of link objects to display on the board.",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "label",
              "url"
            ]
          }
        },
        "link-board.debounceTime": {
          "type": "number",
          "default": 150,
          "description": "The debounce time in milliseconds for the search filter."
        },
        "link-board.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the Link Board shortcut in the status bar."
        },
        "link-board.showDeleteConfirmation": {
          "type": "boolean",
          "default": true,
          "description": "If true, shows a confirmation dialog before deleting a link in the editor."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
